%h1 Tasks
.row
  .offset6.span1
    = link_to "New", new_task_path, :class => 'btn btn-primary span1'
%table.table.table-striped
  %thead
    %tr
      %th
        = t("activerecord.attributes.task.title", :default => t("activerecord.labels.title", :default => "Title"))
      %th Deadline 
      %th Actions
  %tbody
    - @tasks.each do |task|
      %tr{:class => "completed_task_#{task.completed}"}
        %td.task= link_to task.title, task_path(task)
        %td.due= task.due
        %td.actions
          = link_to "Show", task_path(task), :class => 'btn btn-mini'
          = link_to "Edit", edit_task_path(task), :class => 'btn btn-mini'
          = link_to "Destroy", task_path(task), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-mini btn-danger' 
          = link_to (task.completed ? "Not done!" : "Done!"), task_path(task, {:task => {:completed => !task.completed}}), :method => :put, :class => 'btn btn-mini btn-danger' 


