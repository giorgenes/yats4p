%h1 Tasks
.row.newbar
  = link_to "New", new_task_path, :class => 'btn btn-primary span1', :remote => true
%table.table.table-striped
  %thead
    %tr
      %th.task
        = t("activerecord.attributes.task.title", :default => t("activerecord.labels.title", :default => "Title"))
      %th.due Deadline 
      %th.actions Actions
  %tbody#task_list
    - @tasks.each do |task|
      = render :partial => 'task', :locals => { :task => task } 
